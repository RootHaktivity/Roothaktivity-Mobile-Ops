# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/roothaktivity
MONGODB_TEST_URI=mongodb://localhost:27017/roothaktivity_test

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:8080

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Game Configuration
MAX_MISSIONS_PER_PLAYER=50
MISSION_EXPIRY_HOURS=24
SKILL_POINT_MULTIPLIER=10

# Third-party APIs (if needed)
# EXTERNAL_API_KEY=your_api_key_here